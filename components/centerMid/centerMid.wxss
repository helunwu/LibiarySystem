.centerMid{
  background-color: #F0F0F0;
  border-bottom: 65rpx solid white;
}
.centerMid-Title{
  font-size: 35rpx;
  height: 50rpx;
  padding: 0rpx 20rpx;
  padding-top: 30rpx;
  display:flex;
  flex-direction: row;
  border-bottom: 6rpx solid white;
}
.centerMid .centerMid-Title-Expand image{
  width: 45rpx;
  height: 45rpx;
  margin-top: 6rpx;
  margin-left: 530rpx;
}
.centerMid .centerMid-details{
  display: flex;
  margin: 10rpx  10rpx;
}
/* 左 */
.centerMid-details .cover-left{
  width: 150rpx;
  height: 160rpx;
  padding: 10rpx;
}
.centerMid-details .cover-left image{
  width: 100%;
  height: 100%;
}
.centerMid-details .desc-left{
  flex: 1;
  padding: 12rpx;
}
.centerMid-details .desc-left text{
  display: block;
  justify-content: space-evenly;
}
.centerMid-details .bookTitle-left{
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.centerMid-details .bookauther-left{
